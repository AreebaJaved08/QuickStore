<div class="flex justify-center mt-20">
  <div class="w-full max-w-sm bg-white p-14 rounded shadow-sm border border-gray-200">
      <h2 class="text-xl font-semibold text-center mb-4">Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
       <div class="mb-3">
         <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
         <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 w-full px-3 py-2 rounded focus:outline-none focus:ring-1 focus:ring-indigo-500" %>
       </div>
       <div class="mb-3">
         <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
         <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-indigo-500" %>
       </div>
       <% if devise_mapping.rememberable? %>
         <div class="mb-3 flex items-center">
           <%= f.check_box :remember_me, class: "mr-2" %>
           <%= f.label :remember_me, class: "text-sm text-gray-600" %>
         </div>
       <% end %>
         <div>
           <%= f.submit "Log in", class: "w-full bg-[#3f374d] text-white py-2 rounded " %>
         </div>
       <%end%>
          <div class="mt-4 text-center text-sm text-gray-600">
           <%= render "devise/shared/links" %>
         </div>
      
  </div>
</div>



